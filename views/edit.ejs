    <title>MyBlog with node.js</title>
    <!-- style -->
    <style>
        
        *{
            font-family: 'Yeon Sung', cursive;
        }
.title {
    background-color: darkblue;
    color: ivory;
    display: flex;
    justify-content: center;
    text-align: center;
    padding: 10px 0;
    width: 100%;
    min-width: 400px;
    height: 20%;
    min-height: 100px;
}

.titlewrap {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.titlebox > h1 {
    font-size: 50px;
    margin-bottom: 0;
    font-family: 'Yeon Sung', cursive;
}

main {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 25px;
    min-height: 500px;
    max-height: 800px
}

.wrap {
    width: 95%;
    height: 80%;
    display: flex;
    text-align: center;
}


.table {
    border: 1px solid black;
    font-size: 15px;
}

.review {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.showtable {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.showtable > input{
    width: 100%;
    margin-bottom: 20px;
}

.last{
    height: 100px
}

.btn{
    width: 100%;
    display: flex;
    flex-direction: row-reverse;
    padding: 0;
}

.btn > button:first-child{
    margin-left: 20px;
}

.showtable > p {
    width: 100%;
    border: 1px solid black;
    text-align: left;
}

.contentdiv {
    width: 100%;
    display:flex;
}
.contentdiv > p {
    width: 95%;
    border: 1px solid black;
    text-align: left;
    margin-right: 10px;
}
.contentdiv > button{
    width: 5%;
    height: 26px
}

.delete{
    margin-left: 20px;
}
    </style>

    <script>
        $(document).ready(function(){
                getSelf()
        })
        function getSelf() {
            $.ajax({
                type: "GET",
                url: "/posts/users/me",
                headers: {
                    authorization: `Bearer ${localStorage.getItem("token")}`,
                        },
                success: function (response) {
                    let currentUserId_DB = response.user._id
                    if (currentUserId_DB != "<%= post[0]['userId_DB']%>"){
                        alert('권한이 없는 페이지입니다.')
                        window.location.href = '/'
                    }
                }
                    ,
                error: function (xhr, status, error) {
                    if (status == 401) {
                        alert("로그인이 필요합니다.");
                    } else {
                        localStorage.clear();
                        alert("알 수 없는 문제가 발생했습니다. 관리자에게 문의하세요.");
                    }
                    window.location.href = "/";
                    },
                });
                }

// 게시글 수정 버튼
        function edit(){
            let content = $('#content').val()
            let tokenid = localStorage.token
            if (content === ''){
                alert('수정 내용을 작성해주세요.')
                return
            }
            $.ajax({
                type: 'PUT',
                url: `/posts/<%= post[0]['count'] %>/edit`,
                data: {
                tokenid, content
                },
                success: function (response) {
                    if (response['success']){
                        alert(response['msg'])
                        window.location.href = '/posts'
                    }
                    else{
                        alert(response['errormsg'])
                    }
                }
            });
        }

        // 게시글 삭제 버튼
        function shutdown(){
            let content = $('#content').val()
            let tokenid = localStorage.token
            $.ajax({
                type: 'DELETE',
                url: `/posts/<%= post[0]['count'] %>/edit`,
                data: {
                content, tokenid
                },
                success: function (response) {
                    if (response['success']){
                        alert(response['msg'])
                        window.location.href = '/posts'
                    }
                    else{
                        alert(response['errormsg'])
                    }
                }
            });
        }

        function contentEdit(){
            $('#content').replaceWith(function(){
                return $('<input>', {type: 'text', id: 'content', value: `<%= post[0]['content'] %>`, style: "width: 100%; margin-bottom: 20px"})
            })
            $('#contentEditBtn').hide()
        }
    </script>
</head>
<body>
    <header class="title">
        <div class="titlewrap">
            <div class="titlebox">
                <h1 class="titlename" id='realname'>
                    유현준 블로그
                </h1>
            </div>
    </header>

    </div>
    <main>
        <div class="wrap">
            <div class="review">
                <div class="showtable">
                    <p id = 'nickname'> 닉네임: <%= post[0]['nickname'] %></p>
                    <p id = 'title'>제목: <%= post[0]['title']%></p>
                    <div class = 'contentdiv' id = 'comment'>
                        <p id = 'content'>내용: <%= post[0]['content'] %></p>
                        <button id = 'contentEditBtn' onclick = 'contentEdit()'>내용 변경</button>
                    </div>
                    <div class="btn">
                        <button onclick="window.location.href = '/posts'">뒤로가기</button>
                        <button class = 'delete' onclick="shutdown()">삭제하기</button>
                        <button onclick="edit()">수정하기</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
